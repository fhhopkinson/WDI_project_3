<section id="projectEdit">
  <form class="pure-form pure-form-stacked" id="submit" action="/projects" method="PUT">
      <fieldset>
          <legend>Add a new project</legend>

          <div class="pure-g">
              <div class="pure-u-1-3">
                  <label for="title">Title</label>
                  <input id="first-name" name="title" type="text">
              </div>

              <div class="pure-u-1-3">
                  <label for="date">Date</label>
                  <input id="last-name" name="projectDate" type="date">
              </div>
              <div class="pure-u-1-3">
                <label for="projectType">Type</label>
                <select id="projectType" name="projectType"class="pure-input-1-2">
                  <option>Recycling</option>
                  <option>Animals</option>
                  <option>Environment</option>
                  <option>Lobying</option>
                  <option>Energy</option>
                  <option>Other</option>
                </select>
              </div>

          </div>
          <div class="pure-g">
              <div class="pure-u-1-3">
                  <label for="email">Adress Line 1</label>
                  <input id="email" name="addresslineOne"type="text" required>
              </div>

              <div class="pure-u-1-3">
                  <label for="email">Adress Line 2</label>
                  <input id="email"  name="addresslineTwo"type="text" required>
              </div>
              <div class="pure-u-1-3">
                  <label for="email">Postcode</label>
                  <input id="email"  name="postcode"type="text" required>
              </div>
            </div>
            <div class="pure-g">
              <div class="pure-u-1">
                  <label for="desc">Description</label>
                  <textarea rows="6" cols="100" name="desc"></textarea>
              </div>

          </div>
          <div class="pure-g">
            <div class="pure-u-1-5"></div>
            <div class="pure-u-2-5">
                <label for="image">Image</label>
                <input type="file" name="image" id="file">
            </div>
            <div class="pure-u-2-5">
              <button type="submit" class="pure-button pure-button-primary">Add Project</button>
            </div>


          </div>

      </fieldset>
  </form>
</section>
