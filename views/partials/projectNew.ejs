<section id="projectNew">
  <form class="pure-form pure-form-stacked" action="/projects" method="POST">
      <fieldset>
          <legend>Legend</legend>

          <div class="pure-g">
              <div class="pure-u-1 pure-u-md-1-3">
                  <label for="first-name">Title</label>
                  <input id="first-name" name="title" class="pure-u-23-24" type="text">
              </div>

              <div class="pure-u-1 pure-u-md-1-3">
                  <label for="last-name">Date</label>
                  <input id="last-name" name="projectDate"class="pure-u-23-24" type="text">
              </div>

              <div class="pure-u-1 pure-u-md-1-3">
                  <label for="email">Adress Line 1</label>
                  <input id="email" class="pure-u-23-24" name="addresslineOne"type="text" required>
              </div>

              <div class="pure-u-1 pure-u-md-1-3">
                  <label for="email">Adress Line 2</label>
                  <input id="email" class="pure-u-23-24" name="addresslineTwo"type="text" required>
              </div>

              <div class="pure-u-1 pure-u-md-1-3">
                  <label for="email">Postcode</label>
                  <input id="email" class="pure-u-23-24" name="postcode"type="text" required>
              </div>

              <div class="pure-u-1 pure-u-md-1-3">
                  <label for="city">City</label>
                  <input id="city" class="pure-u-23-24" type="text">
              </div>

              <div class="pure-u-1 pure-u-md-1-3">
                  <label for="projectType">Type</label>
                  <select id="projectType" name="projectType"class="pure-input-1-2">
                    <option>Recycling</option>
                    <option>Animals</option>
                    <option>Environment</option>
                    <option>Lobying</option>
                    <option>Energy</option>
                    <option>Other</option>
                  </select>
              </div>
          </div>

          <label for="terms" class="pure-checkbox">
              <input id="terms" type="checkbox"> I've read the terms and conditions
          </label>

          <button type="submit" class="pure-button pure-button-primary">Submit</button>
      </fieldset>
  </form>
</section>
